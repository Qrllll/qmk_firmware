{
  "manufacturer": "Qrllll",
  "keyboard_name": "qrsplit",
  "maintainer": "Qrllll",
  "processor": "RP2040",
  "bootloader": "rp2040",
  "platforms": ["rp2040"],
  "diode_direction": "COL2ROW",

  "usb": {
    "vid": "0xFEED",
    "pid": "0x0001",
    "device_version": "1.0.0"
  },

  "features": {
    "bootmagic": true,
    "command": false,
    "console": false,
    "extrakey": true,
    "mousekey": true,
    "nkro": true
  },

  "matrix_pins": {
    "rows": ["GP3", "GP4", "GP5", "GP6"],
    "cols": ["GP7", "GP8", "GP9", "GP10", "GP11", "GP12", "GP13", "GP14", "GP15"]
  },

  "split": {
    "enabled": true,
    "transport": {
      "protocol": "serial"
    },
    "matrix_pins": {
      "right": {
        "rows": ["GP19", "GP18", "GP17", "GP16"],
        "cols": ["GP13", "GP14", "GP15", "GP29", "GP28", "GP27", "GP26", "GP22", "GP21"]
      }
    }
  },

  
  "keyboard_json": true,
  "layouts": {
    "LAYOUT": {
      "layout": [
        /* LEFT HALF */
        { "matrix": [0, 0], "x": 0, "y": 0 },
        { "matrix": [0, 1], "x": 1, "y": 0 },
        { "matrix": [0, 2], "x": 2, "y": 0 },
        { "matrix": [0, 3], "x": 3, "y": 0 },
        { "matrix": [0, 4], "x": 4, "y": 0 },
        { "matrix": [0, 5], "x": 5, "y": 0 },

        { "matrix": [1, 0], "x": 0, "y": 1 },
        { "matrix": [1, 1], "x": 1, "y": 1 },
        { "matrix": [1, 2], "x": 2, "y": 1 },
        { "matrix": [1, 3], "x": 3, "y": 1 },
        { "matrix": [1, 4], "x": 4, "y": 1 },
        { "matrix": [1, 5], "x": 5, "y": 1 },

        { "matrix": [2, 0], "x": 0, "y": 2 },
        { "matrix": [2, 1], "x": 1, "y": 2 },
        { "matrix": [2, 2], "x": 2, "y": 2 },
        { "matrix": [2, 3], "x": 3, "y": 2 },
        { "matrix": [2, 4], "x": 4, "y": 2 },
        { "matrix": [2, 5], "x": 5, "y": 2 },

        /* left bottom row includes columns 6 & 7 as extra keys */
        { "matrix": [3, 0], "x": 0, "y": 3 },
        { "matrix": [3, 1], "x": 1, "y": 3 },
        { "matrix": [3, 2], "x": 2, "y": 3 },
        { "matrix": [3, 3], "x": 3, "y": 3 },
        { "matrix": [3, 4], "x": 4, "y": 3 },
        { "matrix": [3, 5], "x": 5, "y": 3 },
        { "matrix": [3, 6], "x": 6, "y": 3 },
        { "matrix": [3, 7], "x": 7, "y": 3 },

        /* RIGHT HALF (global columns offset by +8) */
        /* Rows 0..2 on right only have columns 2..8 (so global cols 10..16) */
        { "matrix": [4, 2], "x": 10, "y": 0 },
        { "matrix": [4, 3], "x": 11, "y": 0 },
        { "matrix": [4, 4], "x": 12, "y": 0 },
        { "matrix": [4, 5], "x": 13, "y": 0 },
        { "matrix": [4, 6], "x": 14, "y": 0 },
        { "matrix": [4, 7], "x": 15, "y": 0 },
        { "matrix": [4, 8], "x": 16, "y": 0 },

        { "matrix": [5, 2], "x": 10, "y": 1 },
        { "matrix": [5, 3], "x": 11, "y": 1 },
        { "matrix": [5, 4], "x": 12, "y": 1 },
        { "matrix": [5, 5], "x": 13, "y": 1 },
        { "matrix": [5, 6], "x": 14, "y": 1 },
        { "matrix": [5, 7], "x": 15, "y": 1 },
        { "matrix": [5, 8], "x": 16, "y": 1 },

        { "matrix": [6, 2], "x": 10, "y": 2 },
        { "matrix": [6, 3], "x": 11, "y": 2 },
        { "matrix": [6, 4], "x": 12, "y": 2 },
        { "matrix": [6, 5], "x": 13, "y": 2 },
        { "matrix": [6, 6], "x": 14, "y": 2 },
        { "matrix": [6, 7], "x": 15, "y": 2 },
        { "matrix": [6, 8], "x": 16, "y": 2 },
        
        /* right bottom row: columns 0..8 exist => global 8..16 */
        { "matrix": [7, 0], "x": 8, "y": 3 },
        { "matrix": [7, 1], "x": 9, "y": 3 },
        { "matrix": [7, 2], "x": 10, "y": 3 },
        { "matrix": [7, 3], "x": 11, "y": 3 },
        { "matrix": [7, 4], "x": 12, "y": 3 },
        { "matrix": [7, 5], "x": 13, "y": 3 },
        { "matrix": [7, 6], "x": 14, "y": 3 },
        { "matrix": [7, 7], "x": 15, "y": 3 },
        { "matrix": [7, 8], "x": 16, "y": 3 }
      ]
    }
  }
}